# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Custom OpenAI base URL (for Azure OpenAI or other providers)
# OPENAI_BASE_URL=https://your-custom-endpoint.com/v1

# PostgreSQL Database Configuration
# Format: postgresql://username:password@host:port/database_name?sslmode=require
# Make sure to install the pgvector extension: CREATE EXTENSION IF NOT EXISTS vector;
POSTGRES_CONNECTION_STRING=postgresql://username:password@localhost:5432/chat_with_transcripts?sslmode=require

# Optional: Database connection pool settings
# POSTGRES_MAX_CONNECTIONS=20
# POSTGRES_IDLE_TIMEOUT=30000

# Optional: Logging level (debug, info, warn, error)
# LOG_LEVEL=info

# Optional: Server port (default: 3000)
# PORT=3000
